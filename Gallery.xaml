<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.Gallery">
    <StackLayout>
        
        
        
        <Label Text="Pokemon gen 9" FontSize="30" x:Name="lbl"/>

        <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/1200px-International_Pok%C3%A9mon_logo.svg.png" HeightRequest="300" x:Name="img">

            <Image.GestureRecognizers>
                
                <SwipeGestureRecognizer Direction="Left" Swiped="SwipeGestureRecognizer_Swiped"/>
                <SwipeGestureRecognizer Direction="Right" Swiped="SwipeGestureRecognizer_Swiped"/>
                
                
            </Image.GestureRecognizers>
        </Image>

    </StackLayout>
</ContentPage>